---
import { useRoutes } from "../hooks/useRoutes";

const { pathname } = Astro.url
const routes = useRoutes(pathname)

---
<nav class="w-screen flex px-6 py-8 justify-around">
  <div class="flex gap-x-3 justify-center items-center">
    <img src="/images/logo.png" class="w-16" />
    <h1 class="text-xl font-bold" > TuGu√≠a </h1>
  </div>

  <div class="flex gap-x-5 mt-4">
    {
      routes.map((item)=>(
        <a
          href={`${item.path}`}
          class={`${item.active && "font-bold"} text-lg`}>
          {item.label}
        </a>
      ))
    }
  </div>
  <div class="flex gap-x-3" >
    <button
      class="text-xl text-orange-500 font-medium border-none outline-none h-12 hover:text-orange-400 transition"
      >
      Iniciar session
    </button>
    <button
      class="text-xl text-gray-200 font-medium border-none outline-none bg-orange-500 rounded-lg px-4 h-12 hover:bg-orange-400 transition"
    >
      Registrarse
    </button>
  </div>
</nav>
