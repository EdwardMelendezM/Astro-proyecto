---
import Button from "../Button.astro";

interface Props {
  subtitle: string;
  especialidad?: Array<any>;
  careerId:string | undefined
}

const { subtitle, especialidad, careerId } = Astro.props;
---

<div
  class="flex flex-col justify-center sm:items-start items-center mt-4 sm:mt-11 mb-14 sm:mb-8 mx-auto w-[90%] sm:w-[70%]"
>
  <p class="text-gray-600 text-xl">
    {subtitle}
  </p>

  <div
    class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-3 sm:mt-8 w-[100%]"
  >
    {especialidad?.map((item) => <Button item={item} careerId={careerId} />)}
  </div>
</div>
